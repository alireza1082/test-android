<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click"
        android:text="click"
        android:layout_centerHorizontal="true"
        android:onClick="builder"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click2"
        android:id="@+id/click2"
        android:layout_below="@id/click"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="builder"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click3"
        android:id="@+id/click3"
        android:layout_below="@id/click2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="builder"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click4"
        android:layout_below="@id/click3"
        android:id="@+id/click4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="builder"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click5"
        android:layout_below="@id/click4"
        android:id="@+id/click5"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="showDialog"
        />

</RelativeLayout>